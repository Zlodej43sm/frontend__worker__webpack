#masonry {
    position: relative;

    & > article {
        padding: 10px;
        width: 33%;
        float: left;
        box-sizing: border-box;
        border: 1px dashed $article__border;
    }

    @media screen and (min-width: 769px) and (max-width: 992px) {
        & > article {
            width: 50%;
        }
    }

    @media screen and (max-width: 768px){
        & > article {
            width: 100%;
        }
    }
}
